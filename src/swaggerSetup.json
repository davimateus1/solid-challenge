{
  "openapi": "3.0.0",
  "info": {
    "title": "Users API Documentation - Davi Mateus",
    "description": "This is a simple API made with NodeJS, Express. It's a simple CRUD for users with SOLID concepts.",
    "version": "1.0.0",
    "contact": {
      "email": "davimateusga@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Davi Mateus",
                "email": "davi@gmail.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "88a1ee71-0f34-48cf-a8c6-c6011d26b5e0",
                  "name": "Davi Mateus",
                  "email": "davi@gmail.com",
                  "admin": false,
                  "created_at": "2021-03-01T00:00:00.000Z",
                  "updated_at": "2021-03-01T00:00:00.000Z"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "User already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Get users",
        "description": "Only admin users can execute this request",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Users list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  }
                },
                "example": [
                  {
                    "id": "88a1ee71-0f34-48cf-a8c6-c6011d26b5e0",
                    "name": "Davi Mateus",
                    "email": "davimateusga@gmail.com",
                    "admin": true,
                    "created_at": "2021-03-01T00:00:00.000Z",
                    "updated_at": "2021-03-01T00:00:00.000Z"
                  },
                  {
                    "id": "88a1ee71-0f34-48cf-a8c6-c6011d26b5e0",
                    "name": "Davi Mateus",
                    "email": "davi@gmail.com",
                    "admin": false,
                    "created_at": "2021-03-01T00:00:00.000Z",
                    "updated_at": "2021-03-01T00:00:00.000Z"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "User not permitted or not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "User is not administrator"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get a specific user"
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn user admin"
      }
    }
  }
}
