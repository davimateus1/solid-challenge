{
  "openapi": "3.0.0",
  "info": {
    "title": "Users API Documentation - Davi Mateus",
    "description": "This is a simple API made with NodeJS, Express. It's a simple CRUD for users with SOLID concepts.",
    "version": "1.0.0",
    "contact": {
      "email": "davimateusga@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Davi Mateus",
                "email": "davi@gmail.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "Invalid request body"
          }
        }
      },
      "get": { "tags": ["Users"], "summary": "Get users" }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get a specific user"
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turn user admin"
      }
    }
  }
}
